{
  "description": "RIA-952536 Send appeal submitted AAA appeal type notification for admin and represented cases",
  "request": {
    "uri": "/asylum/ccdAboutToSubmit",
    "credentials": "LegalRepresentative",
    "input": {
      "id": 952536,
      "eventId": "submitAppeal",
      "state": "appealSubmitted",
      "caseData": {
        "template": "minimal-appeal-submitted.json",
        "replacements": {
          "isAdmin": "Yes",
          "appellantsRepresentation": "No",
          "legalRepEmail": "{$TEST_LAW_FIRM_A_USERNAME}",
          "legalRepReferenceNumber": "CASE001",
          "appealType": "ageAssessment"
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-appeal-submitted.json",
      "replacements": {
        "isAdmin": "Yes",
        "appellantsRepresentation": "No",
        "legalRepEmail": "{$TEST_LAW_FIRM_A_USERNAME}",
        "legalRepReferenceNumber": "CASE001",
        "appealType": "ageAssessment",
        "notificationsSent": [
          {
            "id": "952536_APPEAL_SUBMITTED_LEGAL_REP",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          }
        ]
      }
    },
    "notifications": [
      {
        "reference": "952536_APPEAL_SUBMITTED_LEGAL_REP",
        "recipient": "{$TEST_LAW_FIRM_A_USERNAME}",
        "subject": "Immigration and Asylum appeal: Your appeal has been submitted",
        "body": [
          "PA/12345/2019",
          "CASE001",
          "Talha Awan",
          "{$iaExUiFrontendUrl}",
          "{$customerServices.telephoneNumber}",
          "{$customerServices.emailAddress}"
        ]
      }
    ]

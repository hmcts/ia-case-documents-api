    "uri": "/asylum/ccdAboutToSubmit",
    "credentials": "AdminOfficer",
    "input": {
      "id": 7031,
      "eventId": "submitAppeal",
      "state": "appealSubmitted",
      "caseData": {
        "template": "minimal-internal-appeal-submitted.json",

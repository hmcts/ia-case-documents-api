{
  "description": "RIA-5412 send bail application ended notification to Applicant (sms) and HO & LR (emails)",
  "request": {
    "uri": "/bail/ccdAboutToSubmit",
    "credentials": "AdminOfficer",
    "input": {
      "id": 5214,
      "eventId": "endApplication",
      "state": "applicationSubmitted",
      "caseData": {
        "template": "minimal-bail-application-submitted.json",
        "replacements": {
          "bailHearingCentre": "newport",
          "applicantHasMobile": "Yes",
          "applicantMobileNumber1": "{$IA_TEST_APPLICANT_MOBILE}",
          "hoSelectImaStatus": "Yes"
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-bail-application-submitted.json",
      "replacements": {
        "bailHearingCentre": "newport",
        "applicantHasMobile": "Yes",
        "applicantMobileNumber1": "{$IA_TEST_APPLICANT_MOBILE}",
        "hoSelectImaStatus": "Yes",
        "notificationsSent": [
          {
            "id": "5214_BAIL_APPLICATION_ENDED_APPLICANT_SMS",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          },
          {
            "id": "5214_BAIL_APPLICATION_ENDED_HOME_OFFICE",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          },
          {
            "id": "5214_BAIL_APPLICATION_ENDED_LEGAL_REPRESENTATIVE",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          },
          {
            "id": "5214_BAIL_APPLICATION_ENDED_UT_EMAIL",
            "value": "$/[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}/"
          }
        ]
      }
    },
    "notifications": [
      {
        "reference": "5214_BAIL_APPLICATION_ENDED_HOME_OFFICE",
        "recipient": "{$bailHomeOfficeEmailAddress}",
        "subject": "Bail Application: This application has ended",
        "body": [
          "1650-6221-2061-5101"
        ]
      },
      {
        "reference": "5214_BAIL_APPLICATION_ENDED_LEGAL_REPRESENTATIVE",
        "recipient": "{$TEST_LAW_FIRM_A_USERNAME}",
        "subject": "Bail application: This application has ended",
        "body": [
          "1650-6221-2061-5101"
        ]
      },
      {
        "reference": "5214_BAIL_APPLICATION_ENDED_UT_EMAIL",
        "recipient": "{$bailUpperTribunalEmailAddress}",
        "subject": "Bail Application: This application has ended",
        "body": [
          "1650-6221-2061-5101"
        ]
      },
      {
        "reference": "5214_BAIL_APPLICATION_ENDED_APPLICANT_SMS",
        "recipient": "{$IA_TEST_APPLICANT_MOBILE}",
        "subject": "",
        "body": [
          "1650-6221-2061-5101"
        ]
      }
    ]
  }
}

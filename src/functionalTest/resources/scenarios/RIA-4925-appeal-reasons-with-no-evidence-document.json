    "input": {
      "eventId": "submitReasonsForAppeal",
      "state": "awaitingReasonsForAppeal",
      "caseData": {
        "template": "minimal-appeal-submitted.json",
        "replacements": {
          "appealReferenceNumber": "PA/11111/2019",
          "reasonsForAppealDecision": "This is appeal reason",
